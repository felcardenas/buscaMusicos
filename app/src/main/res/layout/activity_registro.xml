<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:text="@string/registro"
                        android:textAlignment="center"
                        android:textSize="30sp" />

                    <EditText
                        android:inputType="text"
                        android:maxLength="20"
                        android:id="@+id/etAlias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/alias"
                        />

                    <EditText
                        android:maxLength="40"
                        android:id="@+id/etCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/correo"
                        android:inputType="textEmailAddress"
                        />

                        <TextView
                            android:id="@+id/tvTituloFechaDeNacimiento"
                            android:textSize="25sp"
                            android:layout_marginTop="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="@string/fechaNacimiento"
                            android:textAlignment="center"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <TextView
                                android:id="@+id/tvFechaDeNacimiento"
                                android:layout_width="215dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:hint="@string/formatoFecha"
                                android:textAlignment="textEnd"
                                android:gravity="end"
                                android:textSize="19sp" />


                            <ImageButton
                                android:id="@+id/ibFechaDeNacimiento"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginEnd="81dp"
                                android:layout_marginRight="81dp"
                                android:contentDescription="a"
                                android:src="@drawable/ic_edit" />
                        </RelativeLayout>

                <TextView
                    android:text="GÉNERO"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/genero"
                    >
                </Spinner>

                    <TextView
                        android:text="INGRESE INSTRUMENTO FAVORITO"
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawSelectorOnTop="true">
                    </Spinner>





                <TextView
                android:text="INGRESE REGION"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawSelectorOnTop="true"
                    >
                </Spinner>

                <TextView
                    android:text="INGRESE COMUNA"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawSelectorOnTop="true">
                </Spinner>

                <TextView
                    android:text="¿ESTÁS DISPONIBLE PARA UNIRTE AHORA A UNA BANDA?"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/SINO">
                </Spinner>

                <EditText
                        android:inputType="textPassword"
                        android:maxLength="15"
                        android:layout_marginTop="50dp"
                        android:hint="CLAVE"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <EditText
                        android:inputType="textPassword"
                        android:maxLength="15"
                        android:hint="REPITA SU CLAVE"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

            <Button
                android:text="REGISTRARSE"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            </LinearLayout>


    </ScrollView>



</LinearLayout>